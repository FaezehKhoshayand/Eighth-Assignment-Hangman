<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: black; -fx-border-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hangman.loginController">
   <children>
      <Label layoutX="243.0" layoutY="41.0" prefHeight="90.0" prefWidth="114.0" text="Login" textFill="WHITE">
         <font>
            <Font name="Arial Bold" size="39.0" />
         </font>
      </Label>
      <TextField fx:id="password" layoutX="269.0" layoutY="215.0" prefHeight="38.0" prefWidth="189.0" promptText="Enter your password" />
      <TextField fx:id="username" layoutX="269.0" layoutY="155.0" prefHeight="38.0" prefWidth="189.0" promptText="Enter your username" />
      <Label layoutX="132.0" layoutY="157.0" text="Username:" textFill="#faf9f9">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label layoutX="132.0" layoutY="217.0" text="Password:" textFill="#faf9f9">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Button fx:id="backBtn" layoutX="269.0" layoutY="278.0" mnemonicParsing="false" onAction="#onBackBtnClick" prefHeight="36.0" prefWidth="84.0" style="-fx-background-color: white;" text="Back">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <Button fx:id="submitBtn" layoutX="374.0" layoutY="278.0" mnemonicParsing="false" onAction="#onSubmitBtnClick" prefHeight="36.0" prefWidth="84.0" style="-fx-background-color: white;" text="Submit">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
